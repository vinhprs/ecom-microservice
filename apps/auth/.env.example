# Database Configuration
# For Docker: use service name 'auth-database' with internal port 5432
# For local development: use 'localhost' with external port 5433
AUTH_DATABASE_URL="postgresql://auth:authpass@auth-database:5432/auth_db"

# JWT Configuration
JWT_ACCESS_SECRET="your-access-token-secret-key-change-in-production"
JWT_REFRESH_SECRET="your-refresh-token-secret-key-change-in-production"
JWT_ACCESS_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# Service Configuration
PORT=3001
NODE_ENV=development

USERS_SERVICE_URL=http://localhost:3002